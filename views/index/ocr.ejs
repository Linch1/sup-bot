<body>

	<%include ../partials/placeholder.ejs%>
	<div class="body body-inview body-container ocr-body-container">
		<%include ../partials/navbar.ejs%>
		<%include ../partials/menu.ejs%>
		<div class="title">
			<strong>OCR SETTINGS</strong>
		</div>

	
		<!--
		<div id="adv-banner-top" class="banner" data-link="https://www.google.com">
	
			<img src="https://wpadvancedads.com/wp-content/uploads/2015/08/728x90.png">

		</div>

		<div id="adv-banner-bottom" class="banner">
			
		</div>

		<div id="adv-banner-right" class="banner">
			
